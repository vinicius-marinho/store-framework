{
  "store.product": {
      "children": [
        "breadcrumb",
        "flex-layout.row#main"
      ]
    },
    
    "flex-layout.row#main": { 
      "props": { 
        "marginTop": 6
      },
      "children": [
        "flex-layout.col#left",
        "flex-layout.col#right"
      ]
    },
    "flex-layout.col#left": {
      "children": [
        "product-images"
      ]
    },
    "flex-layout.col#right": {
      "props": {
        "verticalAlign": "middle",
        "preventVerticalStretch": true
      },
      "children": [
        "product-name",
        "product-identifier.product",
        "buy-button",
        "product-price",
        "sku-selector",
        "product-quantity",
        "shipping-simulator",
        "flex-layout.row#qty-sku"
        
      ]
    },
    "flex-layout.row#qty-sku": {
      "children": [
        "sku-selector",
        "product-quantity",
        "shipping-simulator"
      ]
    },
    "product-images": {
      "props": {
        "displayThumbnailsArrows": true
      }
    },
    "product-price": {
      "props": {
        "showSavings": true,
        "showListPrice": true
      }
    },
    "product-name": {
      "props": {
        "showSKU": true,
        "showBrandName": true
      }
    },
    "product-identifier.product": {
    },
    "buy-button": {
      "props": {
        "isOneClickBuy": true,
        "showTooltipOnSkuNotSelected": false
      }
    }
  }